@model BlindBidding.Models.HomeViewModels.HomePageViewModel


<script>
    window.addEventListener("load", function () {

        var proportions = $(window).width() / $(window).height();

        var height = parseInt($(window).height() / proportions);
        var width = parseInt($(window).width() / (width > height ? (proportions + 0.4) : 0));

        $(".item").height(height);
        $(".carousel-img").height(height);
        $(".carousel-img").width(width);

        $(window).resize(function () {

            height = parseInt($(window).height() / proportions);
            width = parseInt($(window).width() / (width > height ? (proportions+0.4) : 0));

            $(".carousel-img").height(height);
            $(".carousel-img").width(width);
            $(".item").height(height);
        });

    }, false);
</script>
<div class="row">
    <div class="col-xs-12">
        <div class="container" style="padding-bottom: 10px">
            <h3>Ostatnio dodane:</h3>
            <div id="bestsellers" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.NewAuctions.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#bestsellers" data-slide-to="@i" class="active"></li>

                        }
                        else
                        {
                            <li data-target="#bestsellers" data-slide-to="@i"></li>

                        }

                    }
                </ol>

                <div class="carousel-inner">
                    @for (int i = 0; i < Model.NewAuctions.Count(); i++)
                    {
                        @if (i == 0)
                        {
                            <div class="item active" style="height: 200px">
                                <img src="~/images/auctionThumbnails/@Model.NewAuctions.ElementAt(i).ThumbnailPath" alt="@Model.NewAuctions.ElementAt(i).Title" class="carousel-img">
                                <div class="carousel-caption" style="color:#5bc0de">
                                    <h3>@Model.NewAuctions.ElementAt(i).Title</h3>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="item" style="height: 200px">
                                <img src="~/images/auctionThumbnails/@Model.NewAuctions.ElementAt(i).ThumbnailPath" alt="@Model.NewAuctions.ElementAt(i).Title" class="carousel-img">
                                <div class="carousel-caption" style="color:#5bc0de">
                                    <h3>@Model.NewAuctions.ElementAt(i).Title</h3>
                                </div>
                            </div>

                        }


                    }

                </div>

                <a class="left carousel-control" href="#bestsellers" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#bestsellers" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="container" style="padding-bottom: 10px">
            <h3>Kończące się:</h3>
            <div id="last" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.EndingAuctions.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#last" data-slide-to="@i" class="active"></li>

                        }
                        else
                        {
                            <li data-target="#last" data-slide-to="@i"></li>

                        }

                    }
                </ol>

                <div class="carousel-inner">
                    @for (int i = 0; i < Model.EndingAuctions.Count(); i++)
                    {
                        @if (i == 0)
                        {
                            <div class="item active" style="height: 200px">
                                <img src="~/images/auctionThumbnails/@Model.EndingAuctions.ElementAt(i).ThumbnailPath" alt="@Model.EndingAuctions.ElementAt(i).Title" class="carousel-img">
                                <div class="carousel-caption" style="color:#5bc0de">
                                    <h3>@Model.EndingAuctions.ElementAt(i).Title</h3>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="item" style="height: 200px">
                                <img src="~/images/auctionThumbnails/@Model.EndingAuctions.ElementAt(i).ThumbnailPath" alt="@Model.EndingAuctions.ElementAt(i).Title" class="carousel-img">
                                <div class="carousel-caption" style="color:#5bc0de">
                                    <h3>@Model.EndingAuctions.ElementAt(i).Title</h3>
                                </div>
                            </div>

                        }


                    }

                </div>

                <a class="left carousel-control" href="#last" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#last" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>