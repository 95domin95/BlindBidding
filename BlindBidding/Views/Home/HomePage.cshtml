@model BlindBidding.Models.HomeViewModels.HomePageViewModel

<div class="row">
    <div class="col-xs-12">
        <div class="container" style="padding-bottom: 10px">
            <h3>Ostatnio dodane:</h3>
            <div id="bestsellers" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.NewAuctions.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#bestsellers" data-slide-to="@i" class="active"></li>

                        }
                        else
                        {
                            <li data-target="#bestsellers" data-slide-to="@i"></li>

                        }

                    }
                </ol>

                <div class="carousel-inner">
                    @for (int i = 0; i < Model.NewAuctions.Count(); i++)
                    {
                        @if (i == 0)
                        {
                            <div class="item active">
                                <img src="~/images/auctionThumbnails/@Model.NewAuctions.ElementAt(i).ThumbnailPath" alt="@Model.NewAuctions.ElementAt(i).Title" class="carousel-img">
                                <div class="carousel-caption" style="color:#5bc0de">
                                    <h3>@Model.NewAuctions.ElementAt(i).Title</h3>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="item">
                                <img src="~/images/auctionThumbnails/@Model.NewAuctions.ElementAt(i).ThumbnailPath" alt="@Model.NewAuctions.ElementAt(i).Title" class="carousel-img">
                                <div class="carousel-caption" style="color:#5bc0de">
                                    <h3>@Model.NewAuctions.ElementAt(i).Title</h3>
                                </div>
                            </div>

                        }


                    }

                </div>

                <a class="left carousel-control" href="#bestsellers" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#bestsellers" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
