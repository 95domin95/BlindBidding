@model SetPasswordViewModel
@{
    ViewData["Title"] = "Ustaw hasło";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>Ustaw swoje hasło</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    Nie posiadasz lokalnej nazwy użytkownika/hasła do tej strony. Dodaj 
    konto lokalne aby mieć możliwość  logowania bez zewnętrznego loginu.
</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Ustaw hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
